@{
    ViewData["Title"] = "Listado de Médicos";
}

<main id="main" class="main">
    <div class="card">
        <div class="card-body">
            <br />
            <h5 class="card-title">Listado de Médicos</h5>
            <br />

            <div class="row">
                <div class="slider"></div>

                <table id="tbMedicos" class="table table-striped w-100">
                    <thead>
                        <tr>
                            <th>MedicoId</th>
                            <th>Nombre</th>
                            <th>Cédula</th>
                            <th>Tanda Labor</th>
                            <th>Especialidad</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <link href="~/assets/css/css_datatables.min.css" rel="stylesheet" />
    <link href="~/assets/css/buttons.datatables.min.css" rel="stylesheet" />
    <link href="~/assets/css/fixedheader.datatables.min.css" rel="stylesheet" />

    <style>
        thead input {
            width: 100%;
            background-color: #FFFFCC !important;
        }

        .hidden-header {
            display: none;
            background-color: white;
        }

        .btn-nuevo {
            background-color: #1bb0cf !important;
            color: white !important;
        }

        table.dataTable tbody td.no-padding {
            padding: 0;
        }
    </style>

    <script src="~/assets/datatables.responsive.min.js"></script>
    <script src="~/assets/jquery.datatables.min.js"></script>
    <script src="~/assets/js/datatables.buttons.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $("#tbMedicos").DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "@Url.Action("ObtenerDatosMedicos", "Medicos")",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "medicoId" },
                    { "data": "nombre" },
                    { "data": "cedula" },
                    { "data": "tandaLabor" },
                    { "data": "especialidad" },
                    { "data": "estado" },
                ],
                columnDefs: [
                    {
                        targets: [0],
                        visible: false
                    }
                ],
                dom: 'Bfrtip',
                buttons: [
                    {
                        text: 'Crear',
                        action: function () {
                            window.location.href = "@Url.Action("Create", "Medicos")";
                        },
                        className: 'btn-nuevo',
                    },
                    "pageLength"
                ],
                "language": {
                    "processing": "Procesando...",
                    "lengthMenu": "Mostrar _MENU_ registros",
                    "zeroRecords": "No se encontraron resultados",
                    "emptyTable": "Ningún dato disponible en esta tabla",
                    "infoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "search": "Buscar:",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ registros",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    },
                    "buttons": {
                        "pageLength": {
                            "-1": "Mostrar todas las filas",
                            "_": "Mostrar %d filas"
                        }
                    }
                }
            });

            $('#tbMedicos tbody').on('dblclick', 'tr', function () {
                var data = table.row(this).data();
                if (data) {
                    window.location.href = '@Url.Action("Edit", "Medicos")/' + data.medicoId;
                }
            });
        });
    </script>
}
