@model SGMED_UNAPEC.Models.Paciente

@{
    ViewData["Title"] = "Agregar - Paciente";
}

<main id="main" class="main">
    <div class="card">
        <div class="card-body">
            <br />
            <h5 class="card-title text-center">Información del nuevo paciente</h5>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row g-2 justify-content-center ">
                    <div class="form-group">
                        <label for="Nombre" class="form-label">Nombre Completo</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Cedula" class="form-label">Cédula</label>      
                        <input asp-for="Cedula" class="form-control" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="NoCarnet" class="form-label">No. de Carnet</label>
                        <input asp-for="NoCarnet" class="form-control" />
                        <span asp-validation-for="NoCarnet" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="MedicamentoId" class="form-label">Tipo de Paciente</label>
                        <input asp-for="TipoPaciente" class="form-control" />
                        <span asp-validation-for="TipoPaciente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="EstadoId" class="form-label">Estado</label>
                        <select asp-for="EstadoId" id="estado" class="form-select">
                            <option selected>Seleccionar...</option>
                            @foreach (var estados in ViewBag.Estado)
                            {
                                <option value="@estados.EstadoId">@estados.Descripcion</option>
                            }
                        </select>
                        <span asp-validation-for="EstadoId" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="text-center">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
